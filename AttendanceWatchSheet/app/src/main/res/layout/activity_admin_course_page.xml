<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCoursePage">

    <TextView
        android:id="@+id/addCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="16dp"
        android:text="Add Course"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/uploadCourseList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manualAddCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="205dp"
        android:text="Manual"
        app:layout_constraintBottom_toTopOf="@+id/setAddDrop"
        app:layout_constraintEnd_toStartOf="@+id/uploadCourseList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/uploadCourseList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="67dp"
        android:text="upload"
        app:layout_constraintBottom_toTopOf="@+id/removeCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/manualAddCourse"
        app:layout_constraintTop_toBottomOf="@+id/addCourse" />

    <TextView
        android:id="@+id/removeCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Remove Course"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/manualDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadCourseList" />

    <Button
        android:id="@+id/manualDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="57dp"
        android:text="manual"
        app:layout_constraintBottom_toTopOf="@+id/setAddDrop"
        app:layout_constraintStart_toStartOf="@+id/removeCourse"
        app:layout_constraintTop_toBottomOf="@+id/removeCourse" />

    <Button
        android:id="@+id/setAddDrop"
        android:layout_width="252dp"
        android:layout_height="77dp"
        android:layout_marginBottom="125dp"
        android:text="Set add-Drop date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualAddCourse" />

    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="364dp"
        android:layout_height="497dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>