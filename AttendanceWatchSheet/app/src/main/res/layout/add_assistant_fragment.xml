<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="464dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assistant Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/assistantName"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="bottom"
        android:ems="10"
        android:hint="Name"
        android:inputType="textEmailAddress" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:id="@+id/assistantSurnameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assistant Surname:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/assistantSurname"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="bottom"
        android:ems="10"
        android:hint="Surname "
        android:inputType="textEmailAddress" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail Address:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/assistantEmail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="name.surname"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\@isikun.edu.tr"
            android:textSize="18sp"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />



    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/doneButtonAssistant"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="alertDialog"
            android:text="CREATE USER"
            android:textAlignment="center" />

        <Button
            android:id="@+id/cancelAssistantAdditionButton"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:onClick="removeFragment"
            android:text="cancel"
            android:textAlignment="center" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp" />


</LinearLayout>